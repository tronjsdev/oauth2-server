<div class="container">

  <div class="d-flex justify-content-center mb-3">
    <img src="/images/identix-logo.png" alt="logo" style="width: 96px"/>
  </div>

  <form autocomplete="off"
        action="/oauth2/interaction/{{uid}}/login"
        method="post">
    <div class="card m-auto" style="width: 340px">
      <div class="card-body">
        <div class="d-flex justify-content-center mb-3">
          <img src="{{client.logoUri}}" alt="logo" style="width: 96px"/>
        </div>
        <h5 class="card-title text-dark font-weight-normal">
          Sign in to <b style="color: #000">identix</b>
          to continue to <b style="color: #000">{{client.clientName}}</b>
        </h5>
        <h6 class="card-subtitle mb-2 text-muted">
        </h6>
        <div class="form-group mt-4">
          <label for="exampleInputEmail1">Email address</label>
          <input type="email"
                 class="form-control"
                 id="exampleInputEmail1"
                 aria-describedby="emailHelp"
                 name="email"
                 value="foo@gmail.com">

        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">Password</label>
          <input type="password"
                 class="form-control"
                 id="exampleInputPassword1"
                 name="password"
                 value="1">
        </div>
        {{# if loginErrorMsg}}
          <div class="alert alert-danger">{{loginErrorMsg}}</div>
        {{/if}}
        <button type="submit"
                class="btn btn-primary">Login
        </button>
      </div>
    </div>
  </form>
</div>
